generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clinic {
  id         Int            @id @default(autoincrement())
  name       String
  address    String?
  email      String
  phone      String?
  vets       Veterinario[]  
}

model Veterinario {
  id        Int     @id @default(autoincrement())
  name      String
  email     String
  crmv      String
  clinicId  Int
  clinic    Clinic  @relation(fields: [clinicId], references: [id])
}
